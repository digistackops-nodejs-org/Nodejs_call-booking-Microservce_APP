{
  "name": "admin-api",
  "version": "1.0.0",
  "description": "Admin API Backend Service with Testing Suite",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose",
    "test:unit": "jest __tests__/unit --verbose",
    "test:integration": "jest __tests__/integration --verbose",
    "test:api": "jest __tests__/api --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "admin",
    "api",
    "microservice",
    "nodejs",
    "express"
  ],
  "author": "venkatesh",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "mongoose": "^7.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "multer-gridfs-storage": "^5.0.2",
    "nodemailer": "^6.7.3",
    "prom-client": "^14.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.0",
        "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.21.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.38.0",
    "nodemon": "^2.0.22"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "services/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js",
      "!**/__tests__/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}

